                                    <input type="time" class="form-control" name="mardiEnd" value="19:00" id="mardiEnd">
                                </div>
                            </div>
                        </div>  
                             
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center align-items-center flex-column my-2">
