{% extends 'base.html.twig' %}

{% block title %}Ajouts de collaborateurs
{% endblock %}

{% block body %}

{{ form_start(employeForm) }}

<div class="container">
    <div class="mb-5 p-5 shadow arrondi bg-light mt-5">
    
    <div class="row mt-3 ml-3 mb-4">
                    <h2>Ajouter un collaborateur</h2>
                </div>
                <div class="row col-12">
                    <div class="col-4">
                        {{ form_row(employeForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
    
                    <div class="col-2">
                        {{ form_row(employeForm.password, {'attr': {'class': 'form-control'}}) }}
                    </div>
    
                    <div class="col-6">
                        {{ form_row(employeForm.companyName, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    {{ form_row(employeForm.employeColor, {'attr': {'class': 'form-control'}}) }}
                    
                </div>

                <div class="row col-12 mt-2 mb-4">

                    <div class="col-5 d-flex justify-content-around align-items-start shadow pr-5 py-2 rounded bg-white" style="margin-left:15px;">
                        <div class="d-flex flex-column">
                            <h6 class="w-100">Séléctionner votre couleur</h6>
                            <div id="boxColor"></div>
                            <p class="mt-2"><b id="hexaText"></b></p>
                            <p><b id="rgbText"></b></p>
                        </div>
                        <div id="picker" class="col-3"></div>
                    </div>
                </div>

                    <div class="row my-5 pl-5">
                        <h6>Horaires</h6>
                    </div>
    
