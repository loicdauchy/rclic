{% extends 'base.html.twig' %}

{% block title %}Mes catégories
{% endblock %}

{% block body %}

	<div class="container mb-5 mt-5">

		<div class="row">

			{% for c in category %}
				<div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4">
					<div class="card component-card_2">
						<img src="{{ asset('images/'~c.image) }}" class="card-img-top mr-3" alt="widget-card-2" style="width: 100%; height: 220px;">
						<div class="card-body">
							<h5 class="card-title">{{ c.name }}</h5>
							<br>
							<a href="{{path('category_edit', { 'id': c.id })}}" class="btn btn-secondary">Mise à jour</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	
{% endblock %}

{% block javascripts %}

	<script>

		document.getElementById('titlePage').innerHTML = "Mes catégories";
		
		window.onload = () => {
			document.querySelector('.button-left').addEventListener('click', function() {
			  document.querySelector('.sidebar').classList.toggle('fliph');
			})
		}

	</script>

{% endblock javascripts %}
